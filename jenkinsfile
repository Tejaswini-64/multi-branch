pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/artisantek/jenkins.git'
                echo "Running on branch: ${env.BRANCH_NAME}"
            }
        }

        stage('Build') {
            when { branch 'main' }  
            steps {
                sh """
                    cd javaapp-pipeline
                    mvn clean package -DskipTests
                """
            }
        }

        stage('Deploy') {
            when { branch 'main' }  
            steps {
                sh """
                    cd javaapp-pipeline/target
                    if pgrep -f "java -jar" > /dev/null; then
                        pkill -f "java -jar"
                        echo "App was running and has been killed"
                    else
                        echo "App is not running"
                    fi
                    JENKINS_NODE_COOKIE=dontKillMe nohup java -jar *.jar > app.log 2>&1 &
                    echo "App started successfully"
                """
            }
        }

        stage('Unit Tests') {
            steps {
                sh """
                    cd javaapp-pipeline
                    mvn test
                """
            }
        }

    }

    post {
        always {
            echo "Pipeline finished for branch: ${env.BRANCH_NAME}"
        }
    }
}

